{
  "name": "parkandpaint",
  "version": "1.0.0",
  "description": "Park & Paint - Mobile-first, accessible website for parking and painting services",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "optimize-images": "node scripts/optimize-images.js",
    "convert-webp": "node scripts/convert-to-webp.js",
    "create-og-images": "node scripts/create-og-images.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:run && npm run test:e2e",
    "test:clean": "rm -rf test-results/ playwright-report/ coverage/",
    "test:clean-results": "rm -rf test-results/",
    "test:clean-reports": "rm -rf playwright-report/",
    "analyze": "npm run optimize-images && npm run build",
    "bundle-analyze": "ANALYZE=true npm run build",
    "prepare": "git config core.hooksPath .husky"
  },
  "keywords": [
    "parking",
    "painting",
    "services",
    "static-site"
  ],
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@vite-pwa/assets-generator": "^1.0.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "happy-dom": "^19.0.2",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "rollup-plugin-visualizer": "^6.0.4",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.0",
    "terser": "^5.44.0",
    "vite": "^5.0.0",
    "vite-plugin-bundle-analyzer": "^0.0.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "alpinejs": "^3.13.0",
    "leaflet": "^1.9.4"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,html}": [
      "prettier --write"
    ]
  }
}
