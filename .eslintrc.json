{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "vitest-globals/env": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:vitest-globals/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error", "log"] }],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "prefer-const": "warn",
    "no-var": "error"
  },
  "ignorePatterns": ["dist/", "node_modules/"]
}

